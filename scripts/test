#!/usr/bin/env bash

set -e

root=$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)

main() {
  local subcommand="$1"

  cd "$root"
  [[ -d qa_reports ]] || mkdir qa_reports

  find . -name '*.pyc' -delete
  python -m compileall -x jinja2 -q .

  if [[ "$1" ]]; then
    [[ -e env/bin/activate ]] || subcommand_install
    . env/bin/activate
    "subcommand_$subcommand"
  else
    subcommand_all
  fi
}

subcommand_all() {
  subcommand_install
  subcommand_lint
  subcommand_cover
}

subcommand_install() {
  [[ -d env ]] || virtualenv env
  . env/bin/activate
  pip install pip setuptools -U
  python setup.py install
  pip install \
      'coverage==3.7.1' \
      'flake8==2.4.1' \
      'green==1.11.0'
  python setup.py test
}

subcommand_clean() {
  rm -fr env ohmu.egg-info ./*.egg dist qa_reports
  find . -name '*.pyc' -delete
}


subcommand_lint() {
  local args=(
    --max-complexity 7
    --exclude=.ropeproject
  )
  flake8 "${args[@]}" ohmu.py > qa_reports/flake8 || true
  cat qa_reports/flake8
}

subcommand_cover() {
  green test.py -vv
  coverage run --source=ohmu test.py
  coverage -rm
  coverage xml -o qa_reports/coverage.xml
  rm -f .coverage
}

main "$@"
